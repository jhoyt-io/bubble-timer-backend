{
  "name": "bubble-timer-cdk",
  "version": "0.1.0",
  "bin": {
    "bubble-timer-cdk": "bin/bubble-timer-cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "build:test": "npm run build && npm run test",
    "build:test:coverage": "npm run build && npm run test:coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.8",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.699.0",
    "@aws-sdk/client-dynamodb": "^3.569.0",
    "aws-cdk-lib": "^2.140.0",
    "aws-jwt-verify": "^4.0.1",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts",
      "!lib/bubble-timer-application.ts",
      "!lib/bubble-timer-backend-stack.ts",
      "!lib/bubble-timer-dns-stack.ts",
      "!lib/bubble-timer-pipeline-stack.ts",
      "!lib/bubble-timer-users-stack.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 80,
        "statements": 80
      },
      "./lib/backend/": {
        "branches": 90,
        "functions": 95,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage"
  }
}
